<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:indicator="http://docs.oasis-open.org/cti/ns/stix/indicator-1" xmlns:stixCommon="http://docs.oasis-open.org/cti/ns/stix/common-1" xmlns:yaraTM="http://docs.oasis-open.org/cti/ns/stix/extensions/test-mechanism/yara-1" targetNamespace="http://docs.oasis-open.org/cti/ns/stix/extensions/test-mechanism/yara-1" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.2" xml:lang="en">
